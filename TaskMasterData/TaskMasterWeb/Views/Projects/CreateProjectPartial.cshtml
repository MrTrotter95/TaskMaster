@model TaskMasterWeb.ViewModels.ProjectCreateViewModel

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "Projects", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="mgt-20 form-horizontal add-project-partial-form">
        <div>
            <h4 class="fw-semibold black-new pt-2">New Project</h4>
        </div>
        @Html.HiddenFor(model => model.SelectedClientId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mgl-20 mgt-20">
            <div class="form-group mgb-15">
                <div class="d-flex align-items-center ">
                    <img class="svg-label-image svg-color-red mgr-5" src="@Url.Content("~/Content/Images/bullseye.svg")" />
                    @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { placeholder = "Project Name...", @class = "custom-input-white", style = "width: 280px;" } })
                    @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mgb-15">
                <div class="d-flex align-items-center ">
                    <img class="svg-label-image svg-color-red mgr-5" src="@Url.Content("~/Content/Images/person-add.svg")" />
                    @Html.DropDownListFor(model => model.SelectedStaffIds, Model.StaffSelectList, htmlAttributes: new { @class = "custom-input-white" })
                    @Html.ValidationMessageFor(model => model.StaffSelectList, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mgb-15">
                <div class="d-flex align-items-center ">
                    <img class="svg-label-image svg-color-red mgr-5" src="@Url.Content("~/Content/Images/gear.svg")" />
                    @Html.DropDownListFor(model => model.SelectedStatusId, Model.StatusSelectList, htmlAttributes: new { @class = "custom-input-white" })
                    @Html.ValidationMessageFor(model => model.StatusSelectList, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mgt-50">
                <input type="submit" value="Save" class="btn" style="width:100%" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

