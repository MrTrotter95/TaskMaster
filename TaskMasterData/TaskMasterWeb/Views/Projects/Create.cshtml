@model TaskMasterWeb.ViewModels.ProjectCreateViewModel

@{
    ViewBag.Title = "Create";
}

<h1 class="fw-bold red title-text">Create Project</h1>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal card-custom-no-flex">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mgl-20 mgt-20">
            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-md-2 mgr-15 red fw-semibold align-items-center">
                    <img class="svg-label-image svg-color-red mgr-5" src="@Url.Content("~/Content/Images/bullseye.svg")" />
                    @Html.LabelFor(model => model.ProjectName, "Project Name", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-mb-10">
                    @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { placeholder = "Project Name...", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-md-2 mgr-15 red fw-semibold align-items-center">
                    <img class="svg-label-image svg-color-red mgr-5" src="@Url.Content("~/Content/Images/person-add.svg")" />
                    @Html.LabelFor(model => model.ClientSelectList, "Client", htmlAttributes: new { @class = "control-label col-md-1" })
                </div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.SelectedClientId, Model.ClientSelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ClientSelectList, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-md-2 mgr-15 red fw-semibold align-items-center">
                    <img class="svg-label-image svg-color-red mgr-5" src="@Url.Content("~/Content/Images/person-add.svg")" />
                    @Html.LabelFor(model => model.StaffSelectList, "Staff", htmlAttributes: new { @class = "control-label col-md-1" })
                </div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.SelectedStaffIds, Model.StaffSelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StaffSelectList, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-md-2 mgr-15 red fw-semibold">
                    <img class="svg-label-image svg-color-red mgr-5" src="@Url.Content("~/Content/Images/gear.svg")" />
                    @Html.LabelFor(model => model.StatusSelectList, "Project Status", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.SelectedStatusId, Model.StatusSelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StatusSelectList, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex justify-content-start mgt-50">
                <div class="" style="width:250px">
                    <input type="submit" value="Create" class="btn btn-primary text-light fw-normal" style="width:250px" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
