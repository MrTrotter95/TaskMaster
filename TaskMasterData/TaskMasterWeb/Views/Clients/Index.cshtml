@model IEnumerable<TaskMasterWeb.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h1 class="fw-bold red title-text">Your Clients</h1>
<hr />

<table class="table table-hover card-custom-no-flex">
    <thead>
        <tr class="red h5">
            <th class="pdt-20 pdl-20">
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th class="pdt-20">
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th class="pdt-20">
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-hover">
                <td class="pdl-20 pdt-15 pdb-15 text-black">
                    @Html.ActionLink(item.CompanyName, "Details", new { id = item.ClientID }, new { @class = "text-black fw-semibold" })
                </td>
                <td class="pdt-15 pdb-15">
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td class="pdt-15 pdb-15">
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td>
            </tr>
        }
    </tbody>
</table>
