@model IEnumerable<TaskMasterWeb.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h1 class="fw-bold white title-text">Your Clients</h1>
<hr />
<div class="d-flex flex-wrap gap-4 mgt-50">
    @foreach (var item in Model)
    {
        <div class="col-md-4 card-custom-small bg-dark-gray-new">
            <div class="d-flex justify-content-center mgt-30 img-container">
                <img class="profile-image" src="@Url.Content("~/Content/Images/profileimage.jpg")" />
            </div>
            <div class="d-flex justify-content-center mgb-50 mgt-30">
                <h4 class="fw-semibold orange-new pt-2">@item.CompanyName</h4>
            </div>
            <div class="d-flex justify-content-end m-auto align-items-center">
                @Html.ActionLink("View", "Details", new { id = item.ClientID }, htmlAttributes: new { @class = "teal-new mgr-10" })
                <img class="svg-label-image svg-color-teal" src="@Url.Content("~/Content/Images/arrow-right.svg")" />
            </div>
        </div>
    }
</div>
