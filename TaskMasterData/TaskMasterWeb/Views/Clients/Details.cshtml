@model TaskMasterWeb.Models.Client

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactNumber)
        </dd>

    </dl>
</div>

<div>
    <h4 class="fw-semibold">Client Contacts</h4>
    <div class="d-flex justify-content-between">
        @foreach (var contact in Model.ClientContacts)
        {
            <div class="d-flex col-md-4 row card-custom">
                <p class="fw-bold">Contact: <span class="text-gray fw-normal">@contact.FirstName @contact.LastName</span></p>
                <p class="fw-bold">Email: <span class="text-gray fw-normal">@contact.EmailAddress</span></p>
                <p class="fw-bold">Contact Number: <span class="text-gray fw-normal">@contact.ContactNumber</span></p>
            </div>
        }
    </div>
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClientID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
