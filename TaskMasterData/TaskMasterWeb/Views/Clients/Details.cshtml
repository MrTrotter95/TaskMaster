@model TaskMasterWeb.Models.Client

@{
    ViewBag.Title = "Details";
}




<div>
    <div class="d-flex align-items-center col-sm-2 mgb-20">
        <img class="svg-label-image svg-color-green mgr-10" src="@Url.Content("~/Content/Images/arrow-left-circle.svg")" />
        @Html.ActionLink("Clients", "Index", new { }, htmlAttributes: new { @class = "text-black"})
    </div>
    

    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold red title-text">Details</h1>
        @Html.ActionLink("Edit Contact", "Edit", new { id = Model.ClientID }, htmlAttributes: new { @class = "btn btn-primary sml-btn text-light fw-normal", @role = "button" })
    </div>

    <hr />
    <div class="card-custom-no-flex">

        <h1 class="fw-semibold text-black pt-2 mgb-20">@Html.DisplayFor(model => model.CompanyName)</h1>

        <div class="d-flex align-items-center mgb-20">
            <div class="d-flex align-items-center col-sm-2">
                <img class="svg-label-image svg-color-red mgr-10" src="@Url.Content("~/Content/Images/envelope-at-fill.svg")" />
                <p class="fw-semibold  mb-0">Primary Email: </p>
            </div>

            <p class="text-black fw-normal col-md-1 mb-0">@Html.DisplayFor(model => model.EmailAddress)</p>
        </div>

        <div class="d-flex">
            <div class="d-flex align-items-center col-sm-2">
                <img class="svg-label-image svg-color-red mgr-10" src="@Url.Content("~/Content/Images/telephone-fill.svg")" />
                <p class="fw-semibold  mb-0">Primary Phone: </p>
            </div>

            <p class="text-black fw-normal mb-0">@Html.DisplayFor(model => model.ContactNumber)</p>
        </div>
    </div>
</div>


<div class="mgt-50">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold red title-text">Projects</h1>
        @Html.ActionLink("Add Project", "Create", "Projects", new { }, htmlAttributes: new { @class = "btn btn-primary sml-btn text-light fw-normal", @role = "button" })
    </div>
    <hr />

    <div class="card-custom-no-flex">
        <div class="d-flex align-items-center">
            <h3 class="fw-semibold text-black pt-2 mgr-20">12</h3>
            <p class="mb-0">To Schedule</p>
        </div>
    </div>

</div>


<div class="mgt-50">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold red title-text">Client Contacts</h1>
        @Html.ActionLink("Add Contact", "Create", "ClientContacts", htmlAttributes: new { @class = "btn btn-primary sml-btn text-light fw-normal", @role = "button" })
    </div>
    <hr />

    <div class="d-flex gap-5">
        @foreach (var contact in Model.ClientContacts)
        {
            <div class="col-md-4 card-custom-no-flex">
                <h4 class="fw-semibold text-black pt-2 mgb-20">@contact.FirstName @contact.LastName</h4>
                <p class="fw-semibold">Email: <span class="text-black fw-normal">@contact.EmailAddress</span></p>
                <p class="fw-semibold">Contact Number: <span class="text-black fw-normal">@contact.ContactNumber</span></p>
            </div>
        }
    </div>

</div>
