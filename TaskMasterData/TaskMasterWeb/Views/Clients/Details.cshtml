@model TaskMasterWeb.ViewModels.Clients.ClientDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<div>
    <div class="d-flex align-items-center col-sm-2 mgb-20">
        <img class="svg-label-image svg-color-orange mgr-10" src="@Url.Content("~/Content/Images/arrow-left-circle.svg")" />
        @Html.ActionLink("Clients", "Index", new { }, htmlAttributes: new { @class = "orange-new" })
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold white title-text">Details</h1>
        @Html.ActionLink("Edit Contact", "Edit", new { id = Model.ClientID }, htmlAttributes: new { @class = "btn btn-primary sml-btn fw-normal", @role = "button" })
    </div>
    <hr />

    <div class="card-custom-no-flex bg-dark-gray-new">
        <h1 class="fw-semibold orange-new pt-2 mgb-20">@Html.DisplayFor(model => model.CompanyName)</h1>

        <div class="d-flex align-items-center mgb-20">
            <div class="d-flex align-items-center col-sm-2">
                <img class="svg-label-image svg-color-orange mgr-10" src="@Url.Content("~/Content/Images/envelope-at.svg")" />
                <p class="light-gray-new mb-0">Primary Email: </p>
            </div>

            <p class="white fw-normal col-md-1 mb-0">@Html.DisplayFor(model => model.EmailAddress)</p>
        </div>

        <div class="d-flex align-items-center mgb-20">
            <div class="d-flex align-items-center col-sm-2">
                <img class="svg-label-image svg-color-orange mgr-10" src="@Url.Content("~/Content/Images/telephone.svg")" />
                <p class="light-gray-new mb-0">Primary Phone: </p>
            </div>

            <p class="white fw-normal mb-0">@Html.DisplayFor(model => model.ContactNumber)</p>
        </div>

        <div class="d-flex align-items-center mgb-20">
            <div class="d-flex align-items-center col-sm-2">
                <img class="svg-label-image-sm svg-color-orange mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                <p class="light-gray-new mb-0">StreetAddress: </p>
            </div>

            <p class="white fw-normal mb-0">@Html.DisplayFor(model => model.StreetAddress)</p>
        </div>

        <div class="d-flex align-items-center mgb-20">
            <div class="d-flex align-items-center col-sm-2">
                <img class="svg-label-image-sm svg-color-orange mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                <p class="light-gray-new mb-0">Suburb: </p>
            </div>

            <p class="white fw-normal mb-0">@Html.DisplayFor(model => model.Suburb)</p>
        </div>

        <div class="d-flex align-items-center mgb-20">
            <div class="d-flex align-items-center col-sm-2">
                <img class="svg-label-image-sm svg-color-orange mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                <p class="light-gray-new mb-0">City: </p>
            </div>

            <p class="white fw-normal mb-0">@Html.DisplayFor(model => model.City)</p>
        </div>

        <div class="d-flex align-items-center mgb-20">
            <div class="d-flex align-items-center col-sm-2">
                <img class="svg-label-image-sm svg-color-orange mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                <p class="light-gray-new mb-0">Country: </p>
            </div>

            <p class="white fw-normal mb-0">@Html.DisplayFor(model => model.Country)</p>
        </div>
    </div>
</div>


<div class="mgt-50">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold white title-text">Projects</h1>
        @Html.ActionLink("Add Project", "Create", "Projects", new { }, htmlAttributes: new { @class = "btn btn-primary sml-btn fw-normal", @role = "button" })
    </div>
    <hr />

    <div class="card-custom-no-flex bg-dark-gray-new">
        <div class="d-flex gap-5 mgl-20">
            @foreach (var stat in Model.ProjectStatusCount)
            {
                <div class="d-flex align-items-center">
                    <h3 class="fw-semibold teal-new pt-2 mgr-10">@stat.ProjectCount</h3>
                    <p class="mb-0 light-gray-new">@stat.StatusValue</p>
                </div>
            }
        </div>

        <table class="table table-hover">
            <thead>
                <tr class="h6">
                    <th class="pdt-20 pdl-20 pdb-15 orange-new fw-semibold">
                        @Html.DisplayNameFor(model => model.Projects)
                    </th>
                    <th class="pdt-20 pdb-15 orange-new fw-semibold">
                        Project Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Projects)
                {
                    <tr class="table-hover">
                        <td class="pdl-20 pdt-15 pdb-15">
                            @Html.ActionLink(item.ProjectName, "Details", "Projects", new { id = item.ProjectID }, new { @class = "light-gray-new" })
                        </td>
                        <td class="pdt-15 pdb-15 light-gray-new">
                            @Html.DisplayFor(modelItem => item.ProjectStatus.StatusValue)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="mgt-50 pb-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold white title-text">Client Contacts</h1>
        @Html.ActionLink("Add Contact", "Create", "ClientContacts", new TaskMasterWeb.Models.ClientContact(), htmlAttributes: new { @class = "btn btn-primary sml-btn fw-normal", @role = "button" })
    </div>
    <hr />
    <div class="d-flex flex-wrap gap-4 ">
        <div id="addClientContactForm" style="display:none;">
            @Html.Partial("~/Views/ClientContacts/CreateClientContactCard.cshtml", new TaskMasterWeb.Models.ClientContact())
        </div>

        <div id="addClientContactDiv" class="d-flex flex-column client-contact-card bg-dark-gray-new justify-content-center align-items-center">
            <img class="svg-card-button-lg svg-color-orange mgb-30" src="@Url.Content("~/Content/Images/plus-circle.svg")" alt="Add Client" onclick="showAddClientForm();" style="cursor: pointer;" />
            <h4 class="fw-semibold orange-new pt-2">Add Client Contact</h4>
        </div>

        @foreach (var contact in Model.ClientContacts)
        {
            <div class="col-md-4 client-contact-card bg-dark-gray-new">
                <div class="d-flex justify-content-center mgt-30 img-container">
                    <img class="profile-image" src="@Url.Content("~/Content/Images/profileimage.jpg")" />
                </div>
                <div class="d-flex justify-content-center mgb-50 mgt-30">
                    <h4 class="fw-semibold orange-new pt-2">@contact.FirstName @contact.LastName</h4>
                </div>
                <hr class="mgt-0 mgb-20 border-2 border-bottom" />
                <div class="d-flex align-items-center mgb-20">
                    <div class="d-flex align-items-center col-sm-5">
                        <img class="svg-label-image svg-color-orange mgr-10" src="@Url.Content("~/Content/Images/envelope-at.svg")" />
                        <p class="fw-semibold light-gray-new mb-0">Email: </p>
                    </div>

                    <p class="white fw-normal mb-0">@contact.EmailAddress</p>
                </div>

                <div class="d-flex align-items-center mgb-20">
                    <div class="d-flex align-items-center col-sm-5">
                        <img class="svg-label-image svg-color-orange mgr-10" src="@Url.Content("~/Content/Images/telephone.svg")" />
                        <p class="fw-semibold light-gray-new mb-0">Contact Number: </p>
                    </div>

                    <p class="white fw-normal mb-0">@contact.ContactNumber</p>
                </div>
                <div class="d-flex justify-content-end m-auto align-items-center">
                    @Html.ActionLink("Edit", "Edit", "ClientContacts", new { id = contact.ContactID }, htmlAttributes: new { @class = "teal-new" })
                    <img class="svg-label-image svg-color-teal" src="@Url.Content("~/Content/Images/arrow-right.svg")" />
                </div>
            </div>
        }
    </div>
</div>


@{
    <script>
        function showAddClientForm() {
            // hide the add client button and show the form
            document.getElementById("addClientContactForm").style.display = "block";
            document.getElementById("addClientContactDiv").style.display = "none";
        }
    </script>
}