@model TaskMasterWeb.Models.Client

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="d-flex align-items-center col-sm-2 mgb-20">
    <img class="svg-label-image svg-color-orange mgr-10" src="@Url.Content("~/Content/Images/arrow-left-circle.svg")" />
    @Html.ActionLink("Back", "Details", new { id = Model.ClientID}, htmlAttributes: new { @class = "orange-new" })
</div>

    <div class="form-horizontal">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="fw-bold white title-text">Edit Details</h1>
            <input type="submit" value="Save" class="btn btn-primary sml-btn text-light fw-normal" />
        </div>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ClientID)

        <div class="card-custom-no-flex bg-dark-gray-new">

            <h1 class="fw-semibold text-black mgb-0">
                @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control-lg fw-semibold orange-new h1 pdl-0 mgb-0 pdb-0 pdt-0" } })
                @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
            </h1>

            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-sm-2 fw-normal align-items-center">
                    <img class="svg-label-image svg-color-orange mgr-5" src="@Url.Content("~/Content/Images/envelope-at.svg")" />
                    @Html.LabelFor(model => model.EmailAddress, "Primary Email", htmlAttributes: new { @class = "control-label light-gray-new" })
                </div>
                <div>
                    @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-sm-2 fw-normal align-items-center">
                    <img class="svg-label-image svg-color-orange mgr-5" src="@Url.Content("~/Content/Images/Telephone.svg")" />
                    @Html.LabelFor(model => model.ContactNumber, "Primary Phone", htmlAttributes: new { @class = "control-label light-gray-new" })
                </div>
                <div>
                    @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-sm-2 fw-normal align-items-center">
                    <img class="svg-label-image-sm svg-color-orange mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                    @Html.LabelFor(model => model.StreetAddress, "Street Address", htmlAttributes: new { @class = "control-label light-gray-new" })
                </div>
                <div>
                    @Html.EditorFor(model => model.StreetAddress, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.StreetAddress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-sm-2 fw-normal align-items-center">
                    <img class="svg-label-image-sm svg-color-orange mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                    @Html.LabelFor(model => model.Suburb, "Suburb", htmlAttributes: new { @class = "control-label light-gray-new" })
                </div>
                <div>
                    @Html.EditorFor(model => model.Suburb, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.Suburb, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-sm-2 fw-normal align-items-center">
                    <img class="svg-label-image-sm svg-color-orange mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                    @Html.LabelFor(model => model.City, "City", htmlAttributes: new { @class = "control-label light-gray-new" })
                </div>
                <div>
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex align-items-center mgt-10 mgb-10">
                <div class="col-sm-2 fw-normal align-items-center">
                    <img class="svg-label-image-sm svg-color-orange mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                    @Html.LabelFor(model => model.Country, "Country", htmlAttributes: new { @class = "control-label light-gray-new" })
                </div>
                <div>
                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
