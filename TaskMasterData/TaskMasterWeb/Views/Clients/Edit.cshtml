@model TaskMasterWeb.Models.Client

@{
    ViewBag.Title = "Edit";
}

<div class="d-flex align-items-center col-sm-2 mgb-20">
    <img class="svg-label-image svg-color-teal mgr-10" src="@Url.Content("~/Content/Images/arrow-left-circle.svg")" />
    @Html.ActionLink(Model.CompanyName + " Dashboard", "Details", new { id = Model.ClientID }, htmlAttributes: new { @class = "teal-new" })
</div>

<div class="d-flex justify-content-between align-items-center">
    <h1 class="fw-bold red title-text">Edit Details</h1>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ClientID)

        <div class="client-details-card-wide pdl-30 mgt-20">
            <div class="d-flex align-items-center mgb-15">
                <div class="d-flex align-items-center col-sm-2">
                    <img class="svg-label-image svg-color-red mgr-10" src="@Url.Content("~/Content/Images/gear.svg")" />
                    <p class="black-new mb-0">Company Name: </p>
                </div>
                @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "custom-input-white col-md-3", placeholder = "Company..." } })
                @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex align-items-center mgb-15">
                <div class="d-flex align-items-center col-sm-2">
                    <img class="svg-label-image svg-color-red mgr-10" src="@Url.Content("~/Content/Images/envelope-at.svg")" />
                    <p class="black-new mb-0">Primary Email: </p>
                </div>
                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "custom-input-white col-md-3", placeholder = "Emaill address..." } })
                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex align-items-center mgb-15">
                <div class="d-flex align-items-center col-sm-2">
                    <img class="svg-label-image svg-color-red mgr-10" src="@Url.Content("~/Content/Images/telephone.svg")" />
                    <p class="black-new mb-0">Primary Phone: </p>
                </div>
                @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "custom-input-white col-md-3", placeholder = "Contact number..." } })
                @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex align-items-center mgb-15">
                <div class="d-flex align-items-center col-sm-2">
                    <img class="svg-label-image-sm svg-color-red mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                    <p class="black-new mb-0">StreetAddress: </p>
                </div>
                @Html.EditorFor(model => model.StreetAddress, new { htmlAttributes = new { @class = "custom-input-white col-md-3", placeholder = "Street address..." } })
                @Html.ValidationMessageFor(model => model.StreetAddress, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex align-items-center mgb-15">
                <div class="d-flex align-items-center col-sm-2">
                    <img class="svg-label-image-sm svg-color-red mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                    <p class="black-new mb-0">Suburb: </p>
                </div>
                @Html.EditorFor(model => model.Suburb, new { htmlAttributes = new { @class = "custom-input-white col-md-3", placeholder = "Suburb..." } })
                @Html.ValidationMessageFor(model => model.Suburb, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex align-items-center mgb-15">
                <div class="d-flex align-items-center col-sm-2">
                    <img class="svg-label-image-sm svg-color-red mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                    <p class="black-new mb-0">City: </p>
                </div>
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "custom-input-white col-md-3", placeholder = "City..." } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex align-items-center mgb-15">
                <div class="d-flex align-items-center col-sm-2">
                    <img class="svg-label-image-sm svg-color-red mgr-15" src="@Url.Content("~/Content/Images/circle-fill.svg")" />
                    <p class="black-new mb-0">Country: </p>
                </div>
                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "custom-input-white col-md-3", placeholder = "Country..." } })
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
            </div>

            <div class="form-group d-flex justify-content-end">
                <input value="Save" type="submit" class="btn" style="width: 150px;" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
