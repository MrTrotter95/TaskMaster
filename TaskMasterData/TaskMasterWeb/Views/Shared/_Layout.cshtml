<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="pt-0 bg-custom">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <h1 class="logo-text mgl-20">T.M</h1>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "red" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Project Statuses", "Index", "ProjectStatus", routeValues: null, htmlAttributes: new { @class = "red" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Staff", "Index", "Staff", routeValues: null, htmlAttributes: new { @class = "red" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Staff Roles", "Index", "StaffRoles", routeValues: null, htmlAttributes: new { @class = "red" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content mgt-100">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
