@model TaskMasterWeb.Models.ClientContact

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "ClientContacts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="col-md-4 client-contact-card bg-dark-gray-new">
        <div class="d-flex justify-content-center">
            <h4 class="fw-semibold orange-new pt-2">New Client</h4>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="d-flex flex-column justify-content-evenly">

            <div class="form-group mgb-15">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label light-gray-new" })
                <div>
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mgb-15">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label light-gray-new" })
                <div>
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mgb-15">
                @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "control-label light-gray-new" })
                <div>
                    @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group mgb-15">
                @Html.LabelFor(model => model.ContactNumber, htmlAttributes: new { @class = "control-label light-gray-new" })
                <div>
                    @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control bg-dark-gray-new white input" } })
                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="form-group">
            <input value="test" type="submit" class="btn btn-primary" style="width: 100%;" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}